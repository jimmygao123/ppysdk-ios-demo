<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="@dimen/height_size_100"
android:layout_height="wrap_content"
android:background="@color/color_255_255_255">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="@dimen/height_size_1"
    android:background="@color/color_220_220_220"/>
<LinearLayout android:layout_width="@dimen/height_size_100"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="@dimen/height_size_36">

    <TextView
        android:layout_gravity="center"
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="请输入房间号"
        android:textColor="@color/color_FF007AFF"
        android:textSize="@dimen/text_size_34"
        android:layout_marginBottom="@dimen/height_size_10"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/liveid"

        />
</LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="@dimen/height_size_1"
    android:background="@color/color_220_220_220"/>
<LinearLayout android:layout_width="@dimen/height_size_100"
    android:layout_height="@dimen/height_size_72"
    android:orientation="horizontal"
    android:gravity="center"
    >
    <Button
        android:layout_gravity="center"
        android:id="@+id/cannel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="@string/cannel"
        android:textColor="@color/alert_text_color"
        android:textSize="@dimen/text_size_34"
        android:background="@drawable/alert_bg"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="@dimen/height_size_1"
        android:layout_height="fill_parent"
        android:background="@color/color_220_220_220"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/ok"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="@string/ok"
        android:textColor="@color/alert_text_color"
        android:textSize="@dimen/text_size_34"
        android:background="@drawable/alert_bg"
        android:layout_weight="1"
        />

</LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="@dimen/height_size_1"
    android:background="@color/color_220_220_220"/>
</LinearLayout>
